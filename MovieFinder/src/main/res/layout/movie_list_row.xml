<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/movie_search_IV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:transitionName="IV_transition"
        />

    <TextView
        android:id="@+id/movie_search_TV"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/movie_search_IV"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/movie_search_IV"
        android:layout_toRightOf="@+id/movie_search_IV"
        android:text="TextView" />


    <TextView
        android:id="@+id/movie_search_date_TV"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="TextView"
        android:layout_alignStart="@+id/movie_search_TV"
        android:layout_alignLeft="@+id/movie_search_TV"
        android:layout_below="@+id/movie_search_TV"
        android:gravity="center"

        />
</RelativeLayout>