<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5"
    >


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/movie_background_poster_IV"
            android:scaleType="fitXY"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/movie_IV"
            android:layout_gravity="bottom"
            android:transitionName="IV_transition"
            />
    </FrameLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/movie_original_title_TV"
        android:textSize="30dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/movie_overview_TV"
        android:gravity="center_vertical"
        android:text="Overview: "
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/movie_genres_TV"
        android:gravity="center_vertical"
        android:text="Genres: "
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/movie_release_date_TV"
        android:text="Release Date: "
        android:gravity="center_vertical"
        android:layout_weight="1"
        />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/rating_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="User Rating:" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:layout_gravity="center_vertical"
                    android:isIndicator="true"
                    />


            </LinearLayout>






</LinearLayout>